package co.jp.demo.day01;

public class Main {
	
	public static void main(String[] args){
		
		// 基本运算
		// +  -  *  /  %  
		int a = 1;
		int b = 2;
		
		double c = 1.0;
		double d = 2.0;
		System.out.println("两个数的和为:" + (a + b));
		System.out.println("两个数的差为:" + (a - b));
		System.out.println("两个数的积为:" + a*b );
		System.out.println("两个int数的商为:" + a/b);
		System.out.println("两个double数的商为:" + c/d);
		
		System.out.println("a取余b结果为：" + 7 % 8);
		
	}
	
	// 类方法
	public static void main(String args){
		System.out.println("Hello JAPAN！！！" + args);
	}
}
